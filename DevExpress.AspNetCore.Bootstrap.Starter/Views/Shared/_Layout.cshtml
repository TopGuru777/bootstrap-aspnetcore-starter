<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - DevExpress Starter Application</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @Html.DevExpress().GetStyleSheets()

</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a asp-controller="Home" asp-action="Index" class="navbar-brand">
            ASP.NET Core Bootstrap Controls
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse">
            @(Html.DevExpress()
                .BootstrapMenu()
                .Name("navigationMenu")
                .Items(i => {
                    i.Add()
                       .NavigateUrl(Url.Action("GridView", "Sample"))
                       .Text("GridView");
                    i.Add()
                       .NavigateUrl(Url.Action("RegisterForm", "Sample"))
                       .Text("Register form");
                 })
                 .SettingsBootstrap(bootstrap => bootstrap.NavbarMode(true)))
        </div>
    </nav>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>Copyright &copy; 2006-@DateTime.Now.Year - Developer Express Inc</p>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/popper.js/dist/umd/popper.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    @RenderSection("Scripts", required: false)
    @Html.DevExpress().GetScripts()

</body>
</html>
